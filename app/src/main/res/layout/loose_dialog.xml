<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/loose_dialog_title"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progressBarLooseReward"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/restart_level_image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/chestclosed"
        android:scaleX="0.6"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/loose_dialog_ad_text"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/level_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/cherry_cream_soda"
        android:text="@string/repeat_level"
        android:textColor="@color/white"
        android:textSize="24sp" />

</LinearLayout>